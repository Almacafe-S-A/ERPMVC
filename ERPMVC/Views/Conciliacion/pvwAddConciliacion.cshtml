<script>
function SaveConciliacion(e) {

            var notification = $("#notification").data("kendoNotification");
           // e.preventDefault();
    $("#btnConciliacion").hide();
    $("#btnConciliacion").prop("disabled", true);

           // var displayedData = $("#gridCountry").data().kendoGrid.dataSource.view();

            var dataObject = {
                'ConciliacionId': $("#ConciliacionId").val(),
                'SaldoConciliado': $("#SaldoConciliado").val(),
                'FechaConciliacion': $("#FechaConciliacion").getKendoDateTimePicker().value().toJSON(),
                'DateBeginReconciled': $("#DateBeginReconciled").getKendoDateTimePicker().value().toJSON(),
                'DateEndReconciled': $("#DateEndReconciled").getKendoDateTimePicker().value().toJSON(),
                'CheckAccountId': $("#CheckAccountId").val(),
                'BankId': $("#BankId").val(),
                'BankName': $("#BankId").data("kendoDropDownList").text(),
                'AccountId': $("#AccountId").val(),
                // '_Country': displayedData
            };

           // console.log(JSON.stringify(dataObject));
            //var form = $("#frmNumeracion");
            // form.validate();

    var validator = $("#ConciliacionBancaria").data("kendoValidator");
                 var status = $(".status");

                if (validator.validate()) {

                    $.ajax({
                        url: '@Url.Action("SaveConciliacion", "Conciliacion")',
                        method: 'POST',
                        datatype: "json",
                        contentType: 'application/json',
                        async: false,
                        data: JSON.stringify(dataObject),
                        success: function (data) {

                        //notification.show({
                        //    message: "Guardado correctamente!"
                        //}, "upload-success");
                        $.toast({
                        heading: 'Satisfactorio',
                        text: 'Datos guardados correctamente.',
                        position: 'top-right',
                        loaderBg: '#ff6849',
                        icon: 'success',
                        hideAfter: 30000,
                        stack: 6
                        });

                            RefreshConciliacion();

                            $('#myModalConciliacionUpload').modal('hide');
    //myModalConciliacionUpload




                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {

                        notification.show({
                        title: "Validación",
                        message: textStatus + ": " + XMLHttpRequest.responseText
                        }, "error");

                        }
                        });

                        }
                        else {
                        status.text("Oops! There is invalid data in the form.")
                        .removeClass("valid")
                        .addClass("invalid");
                        }


                        $("#btnConciliacion").show();
                        $("#btnConciliacion").prop("disabled", false);
                        }
</script>