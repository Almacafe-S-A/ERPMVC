                                                                      for="DateEndReconciled"
                                                                      style="width: 100%;"
                                                                      format="yyyy-MM-dd"
                                                                      data-val-required="La fecha es requerida" required></kendo-datetimepicker>
                                            </div>
                                        </div>
                                    </div>
