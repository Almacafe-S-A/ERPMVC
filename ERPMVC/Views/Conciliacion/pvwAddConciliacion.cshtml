@model ERPMVC.DTO.ConciliacionDTO

<script>
    function SaveConciliacion(e) {


        //var formdata = new FormData($('#CustomerDocument').get(0));

        var dataObject = {
            'ConciliacionId': $("#ConciliacionId").val(),
            'AccountId': $("#AccountId").val(),
            'AccountName': $("#AccountId").data("kendoDropDownList").text(),

        };

        e.data = dataObject;

          
    }

    function closeConciliacionBancaria() {
       
        RefreshConciliacion();
        $("#myModalConciliacionUpload").modal('hide');
    }
    
</script>


