<script>

    $('#agregarProducto').click(function () {
        var descripcion = $("#descripcion").val();
        var debito = $("#debito").val();
        var credito = $("#credito").val();

        console.log(descripcion);
        console.log(debito);
        console.log(credito);

        if (descripcion == '') {

            if (debito == '' || credito == '') {
                confirm('LLene las casillas correctamente');
            }

        }
        else if (descripcion != '') {
            if (debito == '' && credito != '') {
                console.log('lleno correctamente1');
                $("#idMdlProductoIngresar").find("tbody").append('<tr>' +
                    '<td>' +
                    '<input type="text" disabled  class="form-control" name="descripcion" value="' + descripcion + '">' +
                    '</td>' +
                    '<td><input type="text" class="form-control" name="debito" value="' + debito + '"></td>' +
                    '<td><input type="text" class="form-control" name="credito" value="' + credito + '"></td>' +
                    '<td><button type="button" class="btn btn-warning eliminar"><i class="fa fa-trash"></i></button></td>' +
                    '</tr>'
                )
            }
            else if (debito != '' && credito == '') {
                console.log('lleno correctamenteo2');
                $("#idMdlProductoIngresar").find("tbody").append('<tr>' +
                    '<td>' +
                    '<input type="text" disabled  class="form-control" name="descripcion" value="' + descripcion + '">' +
                    '</td>' +
                    '<td><input type="text" class="form-control" name="debito" value="' + debito + '"></td>' +
                    '<td><input type="text" class="form-control" name="credito" value="' + credito + '"></td>' +
                    '<td><button type="button" class="btn btn-warning eliminar"><i class="fa fa-trash"></i></button></td>' +
                    '</tr>'
                )

            }

            else {
                confirm('Solo llenar una en débito o crédito');
            }
        }
        else {
            console.log('error');
            
        }

       

            



        

        $("#cuentasForm").submit(function (e) {
            e.preventDefault();

            console.log('');

            var arreglo = [];
            var elementos = document.getElementsByName("descripcion");

            for (var i = 0; i < elementos.length; i++) {
                for (var j = 0; j < 1; j++) {

                    arreglo.push({
                        "cuenta": elementos[i].parentElement.parentElement.childNodes[0].children[0].value,
                        "debito": elementos[i].parentElement.parentElement.childNodes[1].children[0].value,
                        "credito": elementos[i].parentElement.parentElement.childNodes[2].children[0].value
                    });
                }
            }
            console.log("----------------VERIFICAR--------------")
            console.log(arreglo);  


            $.ajax({




                url: '@Url.Action("Confirmacion", "Conciliacion")',
                method: 'POST',
                datatype: "json",
                contentType: 'application/json',
                async: false,
                data: JSON.stringify({ arreglo: arreglo }),
               // data: JSON.stringify(arreglo),
                success: function (data) {

                    console.log('VERIFICANDO LA ONDA')
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                    //notification.show({
                    //    title: "Validación",
                    //    message: textStatus + ": " + XMLHttpRequest.responseText
                    //}, "error");
                    console.log("error", XMLHttpRequest.responseText)

                }
            });

        });


