@model List<ERPMVC.DTO.ConciliacionDTO>


@{
    ViewData["Title"] = "Result";
}

<table>
    @foreach (var item in Model)
    {
    <tr>

        <td>@item.Debit</td>  
        <td>@item.Credit</td>   
        <td>@item.Saldo</td> 
    </tr>
    }
</table>
    




<div id="example">

    <div class="demo-section k-content">
        <h4>Uploaded files</h4>
        <div class="t-widget t-upload">
            <ul class="t-upload-files t-reset">
                
                    
                
            </ul>
        </div>


        <p style="margin-top: 1em;">
            <a href="/aspnet-core/Upload/Index" class="k-button k-primary">Go back</a>
        </p>
    </div>

</div>

<h1>Result</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <div class="card-header">
                        <h1 class="my-0 font-weight-normal" style="color:white">Cliente</h1>
                    </div>
                    <br />

                    <form id="frmCustomer" kendo-validator="true"
                          data-ajax="true"
                          data-ajax-method="post">

                        <div class="row">
                            <div class="col-md-12">
                                <button id="btnGuardarCliente" type="submit" deshabilitar="Cliente" onclick="SaveCustomer();" class="form-control  btn-miboton">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<button type="button" class="btn btn-success" data-toggle="modal" data-target=".bd-example-modal-lg">
    Crear balance
</button>



<div class="modal fade bd-example-modal-lg" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Cuentas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form" method="POST">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-bordered table-hover" id="idMdlProductoIngresar">
                                <thead>
                                    <tr>
                                        <th>Descripción</th>
                                        <th>Débito</th>
                                        <th>Crédito</th>
                                        <th>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <td width="60%">
                                            <input class="form-control" type="text" id="descripcion" name="descripcion">

                                        </td>
                                        <td>
                                            <input class="form-control" type="number" id="debito" name="debito">
                                        </td>
                                        <td>
                                            <input class="form-control" type="number" id="credito" name="credito">
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-info" id="agregarProducto"><i class="fa fa-plus"></i></button>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <input type="submit" name="generar" class="btn btn-success" value="Agregar ">
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    $('#agregarProducto').click(function () {
        var descripcion = $("#descripcion").val();
        var debito = $("#debito").val();
        var credito = $("#credito").val();



        $("#idMdlProductoIngresar").find("tbody").append('<tr>' +
            '<td>' +
            '<input type="text" disabled  class="form-control" name="descripcion[]" value="' + descripcion + '">' +
            '</td>' +
            '<td><input type="text" class="form-control" name="debito[]" value="' + debito + '"></td>' +
            '<td><input type="text" class="form-control" name="credito[]" value="' + credito + '"></td>' +
            '<td><button type="button" class="btn btn-warning eliminar"><i class="fa fa-trash"></i></button></td>' +
            '</tr>'
        )





        /*
        $('#copia').clone().removeAttr('style').appendTo( '#copias' );
        $('.eliminar').click(function(){
            var id = $(this).closest("div#copia").remove();
        })
        */

    });

    $(document).on('click', '.eliminar', function () {
        if (confirm('Desea eliminar este producto?')) {
            $(this).closest("tr").remove();

        }
    });
</script>
