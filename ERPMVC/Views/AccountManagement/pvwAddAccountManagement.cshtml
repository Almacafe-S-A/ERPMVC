@model ERPMVC.DTO.AccountManagementDTO
@{ Layout = null;
    var messages = new Dictionary<string, string>() { { "custom", "Ingrese un valor correcto." },
{"required","Valor requerido" }
};
    var rules = new Dictionary<string, string>() { { "custom", "customFunction" } };
}

<script>

    function customFunction(input) {

        if (input.attr('name') === "BranchId" && input.val() === "0") {
            return false;
        }

    }

</script>



<div id="ModalAccountManagement" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Bancos</h4>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmAccountManagement" kendo-validator="true" kendo-messages="messages"
                                      data-ajax="true"
                                      data-ajax-method="post"
                                      data-ajax-begin="SaveAccountManagement"
                                      class="validation-wizard wizard-circle">
                                    <div class="form-body">
                                        <h3 class="card-title">Tipos de Cuentas</h3>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="AccountManagementId" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="AccountManagementId" name="CheckAccountId" class="form-control" disabled="disabled" style="width:100%" />
                                                    <span asp-validation-for="AccountManagementId" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="OpeningDate" class="control-label" style="width: 100%;"></label>
                                                    <kendo-datetimepicker name="OpeningDate"
                                                                          style="width: 100%;"
                                                                          format="dd/MM/yyyy hh:mm:ss"
                                                                          time-format="hh:mm:ss"
                                                                          data-val-required="La fecha es requerida"
                                                                          disabled
                                                                          value="Model.OpeningDate" />
                                                    <span asp-validation-for="OpeningDate" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-7">
                                                <div class="form-group">
                                                    <label asp-for="BankId" class="control-label"></label>
                                                    <kendo-dropdownlist name="BankId"
                                                                        for="@Model.BankId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccione el banco"
                                                                        datatextfield="BankName"
                                                                        datavaluefield="BankId"
                                                                        required
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetBank", "Bank")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="AccountNumber" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="AccountNumber" name="AccountNumber" required class="form-control" autocomplete="off" maxlength="50" style="width:100%" onKeyPress="return soloNumeros(event)" />
                                                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-sm-4 col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="CurrencyId" class=" control-label" style="width:100%">Moneda</label>
                                                    <kendo-dropdownlist name="IdCurrency"
                                                                        for="@Model.CurrencyId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Moneda"
                                                                        datatextfield="CurrencyName"
                                                                        datavaluefield="CurrencyId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetCurrency", "Currency")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span asp-validation-for="CurrencyId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Description" class=" control-label" style="width:100%">Descripción</label>
                                                    <input type="text" asp-for="Description" name="Description" required class="form-control" autocomplete="off" style="min-width:100%" />
                                                    <span asp-validation-for="Description" class="text-danger"></span>
                                                </div>
                                            </div>


                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <button id="btnAccountManagement" class="form-control btn-miboton" type="submit"> Guardar </button>
                                                    </div>
                                                </div>
                                            </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $("#NoFinal").change(function () {
        var NoInicial = $("#NoInicial").val();
        var NoFinal = $("#NoFinal").val();
        if (Number(NoFinal) < Number(NoInicial)) {
            alert("El número final tiene que ser mayor que el número inicial");
            $("#NoFinal").val('');
        }
    });
    function soloNumeros(e) {
        var key = window.Event ? e.which : e.keyCode
        return (key >= 48 && key <= 57)
    }
    function RefrescarGrid() {
        var grid = $("#gridAccountManagement").getKendoGrid();
        grid.dataSource.read();
    }
    function SaveAccountManagement(e) {

            var notification = $("#notification").data("kendoNotification");
           // e.preventDefault();
            $("#btnAccountManagement").hide();
            $("#btnAccountManagement").prop("disabled", true);

        var displayedData = $("#gridAccountManagement").data().kendoGrid.dataSource.view();

        var dataObject = {
            'AccountManagementId': $("#AccountManagementId").val() === "" ? "0" : $("#AccountManagementId").val(),
            'OpeningDate': $("#OpeningDate").getKendoDateTimePicker().value().toJSON(),
            'AccountNumber': $("#AccountNumber").val(),
            'BankId': $("#BankId").val(),
            'BankName': $("#BankId").data("kendoDropDownList").text(),
            'CurrencyId': $("#CurrencyId").val(),
            'CurrencyName': $("#CurrencyId").data("kendoDropDownList").text(),
            'Description': $("#Description").val(),                
            '_AccountManagement': displayedData
            };

            console.log(JSON.stringify(dataObject));
            //var form = $("#frmNumeracion");
           // form.validate();

            var validator = $("#frmAccountManagement").data("kendoValidator");
                 var status = $(".status");


                if (validator.validate()) {

                    $.ajax({
                        url: '@Url.Action("SaveAccountManagement", "AccountManagement")',
                        method: 'POST',
                        datatype: "json",
                        contentType: 'application/json',
                        async: false,
                        data: JSON.stringify(dataObject),
                        success: function (data) {

                            //notification.show({
                            //    message: "Guardado correctamente!"
                            //}, "upload-success");
                            $.toast({
                                heading: 'Satisfactorio',
                                text: 'Datos guardados correctamente.',
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'success',
                                hideAfter: 30000,
                                stack: 6
                            });

                           RefrescarGrid();

                            $('#ModalAccountManagement').modal('hide');


                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {

                            notification.show({
                                title: "Validacion",
                                message: textStatus + ": " + XMLHttpRequest.responseText
                            }, "error");

                        }
                    });

                }
                else {
                    status.text("Oops! There is invalid data in the form.")
                        .removeClass("valid")
                        .addClass("invalid");
                }


        $("#btnAccountManagement").show();
        $("#btnAccountManagement").prop("disabled", false);
    }
</script>