                                                </div>
                                            </div>


                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Price" class="control-label" style="width:100%"></label>
                                                    <kendo-numerictextbox name="Price"
                                                                          format="n2"
                                                                          min="0"
                                                                          step="1"
                                                                          required
                                                                          maxlength="20"
                                                                          onchange="CalcularTotal();"
                                                                          style="width:100%"
                                                                          value="Model.Price" />
                                                    <span asp-validation-for="Price" class="text-danger"></span>
                                                </div>
                                            </div>



                                        </div>


