                                                    <input type="text" asp-for="NombreTipoContrato" name="NombreTipoContrato" class="form-control" style="width:100%" onkeypress="return soloLetras(event)" onkeyup = "this.value=this.value.toUpperCase()"/>
                                                    <span asp-validation-for="NombreTipoContrato" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="IdEstado" class="control-label"></label>
