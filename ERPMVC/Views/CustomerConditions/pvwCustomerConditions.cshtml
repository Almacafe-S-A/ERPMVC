                                <h4 class="m-b-0 text-white">CustomerConditions</h4>
                            </div>*@
                            <div class="card-body">
                                <form id="frmCustomerConditions" asp-controller="CustomerConditions" asp-action="SaveCustomerConditions" method="post" class="validation-wizard wizard-circle">
