@model ERPMVC.DTO.EscalaDTO

@{ Layout = null;
    var messages = new Dictionary<string, string>() { { "custom", "Ingrese un valor correcto." },
                   // {"required","Valor requerido" }
                };
    var rules = new Dictionary<string, string>() { { "custom", "customFunction" } };
}

<script>

        function customFunction(input) {

            if (input.attr('name') === "BranchId" && input.val() === "0") {
                return false;
            }

        }


</script>



<div id="ModalEscala" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Escala</h4>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmEscala" kendo-validator="true"
                                      data-ajax="true"
                                      data-ajax-method="post"
                                      data-ajax-begin="SaveEscala"
                                      class="validation-wizard wizard-circle">
                                    <div class="form-body">
                                        <h3 class="card-title">Escala</h3>
                                        <hr>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="IdEscala" class=" control-label" style="width:100%">Id Escala</label>
                                                    <input type="text" asp-for="IdEscala" name="IdEscala" class="form-control" disabled="disabled" style="width:100%" />
                                                    <span asp-validation-for="IdEscala" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="NombreEscala" class=" control-label" style="width:100%">Nombre Escala</label>
                                                    <input type="text" asp-for="NombreEscala" name="NombreEscala" class="form-control" style="width:100%" />
                                                    <span asp-validation-for="NombreEscala" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="DescripcionEscala" class=" control-label" style="width:100%">Descripcion Escala</label>
                                                    <input type="text" asp-for="DescripcionEscala" name="DescripcionEscala" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="DescripcionEscala" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="ValorInicial" class=" control-label" style="width:100%">Valor Inicial</label>
                                                    <input type="text" asp-for="ValorInicial" name="ValorInicial" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="ValorInicial" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="ValorFinal" class=" control-label" style="width:100%">Valor Final</label>
                                                    <input type="text" asp-for="ValorFinal" name="ValorInicial" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="ValorFinal" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Porcentaje" class=" control-label" style="width:100%">Porcentaje</label>
                                                    <input type="text" asp-for="Porcentaje" name="Porcentaje" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Porcentaje" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="ValorCalculo" class=" control-label" style="width:100%">Valor Cálculo</label>
                                                    <input type="text" asp-for="ValorCalculo" name="ValorCalculo" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="ValorCalculo" class="text-danger"></span>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Estado" class="control-label"></label>
                                                    <kendo-dropdownlist name="IdEstado"
                                                                        for="@Model.IdEstado"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Estado"
                                                                        datatextfield="NombreEstado"
                                                                        datavaluefield="IdEstado"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetGrupoEstadoUno", "Estados")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button id="btnEscala" class="form-control btn-miboton" type="submit"> Guardar </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
        function SaveEscala(e) {

            var notification = $("#notification").data("kendoNotification");
           // e.preventDefault();
            $("#btnEscala").hide();
            $("#btnEscala").prop("disabled", true);

            var displayedData = $("#gridEscala").data().kendoGrid.dataSource.view();

            var dataObject = {
                'IdEscala': $("#IdEscala").val() === "" ? "0" : $("#IdEscala").val(),
                           'NombreEscala': $("#NombreEscala").val(),
                           'DescripcionEscala': $("#DescripcionEscala").val(),
                           'IdEstado': $("#IdEstado").val(),
                           'Estado': $("#IdEstado").data("kendoDropDownList").text(),

                'ValorInicial': $("#ValorInicial").val(),
                'ValorFinal': $("#ValorFinal").val(),
                'Porcentaje': $("#Porcentaje").val(),
                'ValorCalculo': $("#ValorCalculo").val(),

                           //'FechaCreacion': $("#FechaCreacion").val(),
                           //'FechaModificacion':$("#FechaModificacion").val(),
                           //'UsuarioCreacion':$("#UsuarioCreacion").val(),
                           //'UsuarioModificacion':$("#UsuarioModificacion").val(),
                           '_Escala': displayedData
            };

           // console.log(JSON.stringify(dataObject));
            //var form = $("#frmNumeracion");
           // form.validate();

            var validator = $("#frmEscala").data("kendoValidator");
                 var status = $(".status");
            console.log(validator)
            console.log('VERIFICAR',displayedData.length)
            if (displayedData.length > 0) {
                if (validator.validate()) {

                    $.ajax({
                        url: '@Url.Action("SaveEscala", "Escala")',
                        method: 'POST',
                        datatype: "json",
                        contentType: 'application/json',
                        async: false,
                        data: JSON.stringify(dataObject),
                        success: function (data) {

                            //notification.show({
                            //    message: "Guardado correctamente!"
                            //}, "upload-success");
                            $.toast({
                                heading: 'Satisfactorio',
                                text: 'Datos guardados correctamente.',
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'success',
                                hideAfter: 30000,
                                stack: 6
                            });

                            RefreshCotizaciones();

                            $('#ModalEscala').modal('hide');


                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            console.log('VERIFICAR')

                            notification.show({
                                title: "Validacion",
                                message: textStatus + ": " + XMLHttpRequest.responseText
                            }, "error");

                        }
                    });

                }
                else {
                    status.text("Oops! There is invalid data in the form.")
                        .removeClass("valid")
                        .addClass("invalid");
                }
            }
            else {
                notification.show({
                    title: "Validacion",
                    message: "Debe agregar los productos!"
                }, "error");
               // notification.show("New E-mail","Debe agregar los productos", "info");
                //alert('Debe agregar los productos!!');
            }

            $("#btnEscala").show();
            $("#btnEscala").prop("disabled", false);
    }
</script>
