@model ERPMVC.Models.Customer


<div class="card-header">
    <h1 class="my-0 font-weight-normal">Cliente</h1>
</div>


<div class="panel panel-default">
    <div class="panel-body">

        <div class="row">
            <div class="form-group col-md-3 ">

                @Html.LabelFor(model => model.CustomerId, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().NumericTextBoxFor(model => model.CustomerId)
                                .Enable(false)
                                .Decimals(0)
                                .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                )

            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.CustomerName)
                                                                          .HtmlAttributes(new { clas = "form-control", style = "width:100%" })
                                                                              .Enable(true)
                )

            </div>
            <div class=" form-group col-md-3">
                @Html.LabelFor(model => model.RTN, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.RTN)
                            .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                            .Enable(true)
                )
            </div>
        </div>



        <div class="row">

            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.Address)
                           .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                           .Enable(true)
                )
            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.City)
                                                                            .HtmlAttributes(new { clas = "form-control", style = "width:100%" })
                                                                              .Enable(true)
                )
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.State)
                                                                             .HtmlAttributes(new { clas = "form-control", style = "width:100%" })
                                                                              .Enable(true)
                )

            </div>

        </div>

        <div class="row">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.ZipCode, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.ZipCode)
                     .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                    .Enable(true)
                )

            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.Phone)
                                                                    .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                                                                      .Enable(true)
                )

            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.Identidad, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.Identidad)
                   .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                   .Enable(true)
                )
            </div>

        </div>

        <div class="row">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.ContactPerson, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.ContactPerson)
                            .HtmlAttributes(new { style = "width:100%" })
                            .Enable(true)
                )

            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().TextBoxFor(model => model.Email)
                            .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                            .Enable(true)
                )

            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.IdEstado, htmlAttributes: new { @class = "control-label", style = "width:100%" })
                @(Html.Kendo().DropDownListFor(model => model.IdEstado)
                     .DataTextField("NombreEstado")
                     .DataValueField("IdEstado")
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("Get", "Estados");
                        })
                        .ServerFiltering(true);
                    })
                  .HtmlAttributes(new { @class = "form-control", style = "width:100%" })
                  .Enable(true)
                )

            </div>
        </div>



        <button type="submit" class="btn btn-default">Guardar</button>
    </div>
</div>




<div class="panel panel-default">

    @(Html.Kendo().TabStrip()
       .Name("tabDetalleCliente")
       .Items(tabstrip =>
       {
           tabstrip.Add().Text("Clientes")
           //.ImageUrl(Url.Content("~/shared/icons/sports/baseball.png"))
           //.Content(@Url.Action("CustomersOfCustomer", "CustomerOfCustomer"));
           .LoadContentFrom("CustomersOfCustomer", "CustomerOfCustomer");

           tabstrip.Add().Text("Proveedores")
           //.ImageUrl(Url.Content("~/shared/icons/sports/baseball.png"))
           .Content(@Url.Action("Vendor", "Vendor"));

           tabstrip.Add().Text("Telefonos")
           //.ImageUrl(Url.Content("~/shared/icons/sports/baseball.png"))
           .Content(@Url.Action("", "Customer"));

       })
       .SelectedIndex(0)
    )
</div>