@model ERPMVC.DTO.PuestoDTO

@{ Layout = null;
    var messages = new Dictionary<string, string>() { { "custom", "Ingrese un valor correcto." },
           // {"required","Valor requerido" }
        };
    var rules = new Dictionary<string, string>() { { "custom", "customFunction" } };
}

<script>

        function customFunction(input) {

            if (input.attr('name') === "BranchId" && input.val() === "0") {
                return false;
            }

        }


</script>



<div id="ModalPuesto" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Puesto</h4>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmPuesto" kendo-validator="true"
                                      data-ajax="true"
                                      data-ajax-method="post"
                                      data-ajax-begin="SavePuesto"
                                      class="validation-wizard wizard-circle">
                                    <div class="form-body">
                                        <h3 class="card-title">Puesto</h3>
                                        <hr>
                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="IdPuesto" class=" control-label" style="width:100%">IdPuesto</label>
                                                    <input type="text" asp-for="IdPuesto" name="IdPuesto" class="form-control" disabled="disabled" style="width:100%" />
                                                    <span asp-validation-for="IdPuesto" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="IdDepartamento" class="control-label"></label>
                                                    <kendo-dropdownlist name="IdDepartamento"
                                                                        for="@Model.IdDepartamento"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Departamento"
                                                                        datatextfield="NombreDepartamento"
                                                                        datavaluefield="IdDepartamento"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("Get", "Departamento")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="NombrePuesto" class=" control-label" style="width:100%">Nombre Puesto</label>
                                                    <input type="text" asp-for="NombrePuesto" name="NombrePuesto" class="form-control" style="width:100%" />
                                                    <span asp-validation-for="NombrePuesto" class="text-danger"></span>
                                                </div>
                                            </div>

                                          
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button id="btnPuesto" class="form-control btn-miboton" type="submit"> Guardar </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
        function SavePuesto(e) {

            var notification = $("#notification").data("kendoNotification");
           // e.preventDefault();
            $("#btnPuesto").hide();
            $("#btnPuesto").prop("disabled", true);

            var displayedData = $("#gridPuesto").data().kendoGrid.dataSource.view();

            var dataObject = {
            
                'IdPuesto': $("#IdPuesto").val() === "" ? "0" : $("#IdPuesto").val(),
                'NombrePuesto': $("#NombrePuesto").val(),
                'IdDepartamento': $("#IdDepartamento").val(),
                'NombreDepartamento': $("#IdDepartamento").data("kendoDropDownList").text(),
                'FechaCreacion': $("#FechaCreacion").val(),
                'FechaModificacion':$("#FechaModificacion").val(),
                'UsuarioCreacion':$("#UsuarioCreacion").val(),
                'UsuarioModificacion':$("#UsuarioModificacion").val(),
                '_Puesto': displayedData
            };

           // console.log(JSON.stringify(dataObject));
            //var form = $("#frmNumeracion");
           // form.validate();

            var validator = $("#frmPuesto").data("kendoValidator");
            var status = $(".status");

                if (validator.validate()) {

                    $.ajax({
                        url: '@Url.Action("SavePuesto", "Puesto")',
                        method: 'POST',
                        datatype: "json",
                        contentType: 'application/json',
                        async: false,
                        data: JSON.stringify(dataObject),
                        success: function (data) {

                            //notification.show({
                            //    message: "Guardado correctamente!"
                            //}, "upload-success");
                            $.toast({
                                heading: 'Satisfactorio',
                                text: '<br/><br/>Datos guardados correctamente.',
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'success',
                                hideAfter: 3000,
                                stack: 6
                            });

                           
                            RefrescarGrid();

                            $('#ModalPuesto').modal('hide');


                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            console.log('VERIFICAR')

                            notification.show({
                                title: "Validación",
                                message: textStatus + ": " + XMLHttpRequest.responseText
                            }, "error");

                        }
                    });

                }
                else {
                    status.text("Oops! There is invalid data in the form.")
                        .removeClass("valid")
                        .addClass("invalid");
                }
            

            $("#btnPuesto").show();
            $("#btnPuesto").prop("disabled", false);
    }
</script>
