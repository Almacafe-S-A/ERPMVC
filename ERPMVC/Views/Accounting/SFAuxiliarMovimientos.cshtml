@model ERPMVC.DTO.AccountingDTO

@using Syncfusion.JavaScript

<script src="http://cdn.syncfusion.com/17.3.0.9/js/l10n/ej.localetexts.es-ES.min.js"></script>
<script src="http://cdn.syncfusion.com/js/assets/i18n/ej.culture.es-ES.min.js"></script>

<div class="row" id="div-cuenta">
    <div class="col-md-4">
        <div class="form-group">
            <label id="Cuentalbl">Cuenta</label>
            <kendo-dropdownlist name="Cuenta" filter="Kendo.Mvc.UI.FilterType.Contains"
                                option-label="Seleccione la cuenta "
                                datatextfield="AccountName"
                                datavaluefield="AccountId"
                                style="width: 100%;"
                                on-change="onChange">
                <datasource type="DataSourceTagHelperType.WebApi" page-size="9999999">
                    <transport>
                        <read url="@Url.Action("GetAccountingDiaryActivos", "Accounting")" />
                    </transport>
                </datasource>
            </kendo-dropdownlist>
            <span id="Span" class="text-danger"></span>
            <script type="text/javascript">
                function onChange(e) {
                    //let val = $("#reportviewer1_Param_101_popup .e-content .e-ul .e-active").prop("data-value");

                    if (e.sender.value() !== "") {
                        $("#reportviewer1_Param_101 option[value='" + e.sender.value() + "']").prop("selected", true);
                        $("#reportviewer1_Param_101_input").prop("value", e.sender.value());
                        $("#reportviewer1_Param_101_hidden").val(e.sender.text());
                        $("#reportviewer1_Param_101_popup .e-content .e-ul .e-active").prop("class", "");
                        $("#reportviewer1_Param_101_popup .e-content .e-ul [data-value='" + e.sender.value() + "']").prop("class", "e-active");
                    }
                }
            </script>
        </div>
    </div>
</div>

<div style=" align-items:center; height:825px;width: 100%;">
    <ej-report-viewer id="reportviewer1" rendering-begin="renderingBegin" report-print="onPrintReport" processing-mode="Remote" ajax-before-load="ajaxBeforeLoad"
                      report-service-url="/ReportViewer" report-loaded="onReportLoaded" locale="es-ES" report-path="/ReportsTemplate/HistoricoPorCuenta.rdl" />

</div>
