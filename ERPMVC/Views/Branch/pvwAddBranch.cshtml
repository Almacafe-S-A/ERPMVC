                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="LimitCNBS" class=" control-label" style="width:100%"></label>
                                                    <input asp-for="LimitCNBS" name="LimitCNBS" required class="form-control  " style="min-width: 100% !important;" onkeypress="return SoloNumeros(event)" maxlength="30" />
                                                    <span asp-validation-for="LimitCNBS" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Phone" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Phone" name="Phone" class="form-control" required autocomplete="off"  onchange="validar()" style="min-width:100%" />
                                                    <span asp-validation-for="Phone" class="text-danger"></span>
