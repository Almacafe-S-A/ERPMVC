                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="BranchCode" class="control-label"></label>
                                                    <input type="text" asp-for="BranchCode" name="BranchCode" class="form-control" required style="min-width:100%"  maxlength="30" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="BranchName" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="BranchName" name="BranchName" class="form-control" required style="min-width:100%"   maxlength="100"/>
                                                    <span asp-validation-for="BranchName" class="text-danger"></span>
                                                </div>
                                            </div>                                           
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Description" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Description" name="Description" class="form-control" required autocomplete="off" style="min-width:100%"   maxlength="100"/>
                                                    <span asp-validation-for="Description" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="CurrencyId" class="control-label"></label>
                                                    <kendo-dropdownlist name="CurrencyId"
                                                                        for="@Model.CurrencyId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        data-val-required="Valor requerido"
                                                                        option-label="Seleccionar Moneda"
                                                                        datatextfield="CurrencyName"
                                                                        datavaluefield="CurrencyId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetCurrencyP", "Currency")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Estado" class="control-label"></label>
                                                    <kendo-dropdownlist name="IdEstado"
                                                                        for="@Model.IdEstado"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Estado"
                                                                        required
                                                                        datatextfield="NombreEstado"
                                                                        datavaluefield="IdEstado"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetGrupoEstadoUno", "Estados")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <script>
                                                    function refreshdepartamento() {
                                                        $("#StateId").data("kendoDropDownList").dataSource.read();
                                                    }
                                                </script>
                                                <div class="form-group">

                                                    <label asp-for="CountryId" class="control-label"></label>
                                                    <kendo-dropdownlist name="CountryId"
                                                                        for="@Model.CountryId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar País"
                                                                        datatextfield="Name"
                                                                        onchange="refreshdepartamento();"
                                                                        datavaluefield="Id"
                                                                        required
                                                                        auto-bind="true"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("Get", "Country")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <script>
                                                    function GetCountryId() {

                                                        return { 'CountryId': $("#CountryId").val() }
                                                    }

                                                    function refreshmunicipio() {
                                                        $("#CityId").data("kendoDropDownList").dataSource.read();
                                                    }
                                                </script>
                                                <div class="form-group">
                                                    <label asp-for="StateId" class=" control-label" style="width:100%"></label>
                                                    @*<input type="text" asp-for="State" name="State" class="form-control" autocomplete="off" style="width:100%" />*@
                                                    <kendo-dropdownlist name="StateId"
                                                                        for="@Model.StateId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Departamento"
                                                                        auto-bind="true"
                                                                        onchange="refreshmunicipio();"
                                                                        required
                                                                        datatextfield="Name"
                                                                        datavaluefield="Id"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetJson", "State")" data="GetCountryId" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span asp-validation-for="State" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <script>
                                                    function GetStateId() {

                                                        return { 'StateId': $("#StateId").val() }
                                                    }
                                                </script>
                                                <div class="form-group">
                                                    <label asp-for="City" class=" control-label" style="width:100%"></label>
                                                    <kendo-dropdownlist name="CityId"
                                                                        for="@Model.CityId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Ciudad"
                                                                        auto-bind="true"
                                                                        required
                                                                        datatextfield="Name"
                                                                        datavaluefield="Id"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetCityJson", "City")" data="GetStateId" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
