                                                </div>
                                            </div>
                                        </div> 

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Email" class=" control-label" style="width:100%"></label>
                                                    <input type="email" asp-for="Email" name="Email" class="form-control" required autocomplete="off" style="min-width:100%" maxlength="80" />
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="ContactPerson" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="ContactPerson" name="ContactPerson" required class="form-control" autocomplete="off" style="min-width: 100%"  maxlength="80"/>
