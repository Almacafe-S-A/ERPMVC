                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="ZipCode" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="ZipCode" name="ZipCode" class="form-control" required autocomplete="off" onkeypress="return SoloNumeros(event)" style="min-width:100%"  maxlength="5" />
                                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
