@model ERPMVC.Models.Warehouse

<script>
    function SaveWareHouse(e) {

        var notification = $("#notification").data("kendoNotification");
        // e.preventDefault();
        $("#btnWareHouse").hide();
        $("#btnWareHouse").prop("disabled", true);

       // var displayedData = $("#gridNumeracionBranch").data().kendoGrid.dataSource.view();

        var dataObject = {
            'WarehouseId': $("#WarehouseId").val(),
            'WarehouseName': $("#WarehouseName").val(),
            'Description': $("#Description").val(),
            'IdEstado': $("#IdEstadowarehouse").val(),
            'Estado': $("#IdEstado").data("kendoDropDownList").text(),
            'BranchId': $("#BranchId").val(),
             //'UsuarioCreacion': $("#UsuarioCreacion").val(),
             //'UsuarioModificacion': $("#UsuarioModificacion").val(),
             //'FechaCreacion': $("#FechaCreacion").val(),
             //'FechaModificacion': $("#FechaModificacion").val() 

        }


        var validator = $("#frmWareHouse").data("kendoValidator");
         var status = $(".status");

            
        if (validator.validate()) {

            $.ajax({
                url: '@Url.Action("SaveWarehouse", "WareHouse")',
                method: 'POST',
                datatype: "json",
                contentType: 'application/json',
                async: false,
                data: JSON.stringify(dataObject),
                success: function (data) {

                    //notification.show({
                    //    message: "Guardado correctamente!"
                    //}, "upload-success");
                    $.toast({
                        heading: 'Satisfactorio',
                        text: '<br/><br/>Datos guardados correctamente.',
                        position: 'top-right',
                        loaderBg: '#ff6849',
                        icon: 'success',
                        hideAfter: 3000,
                        stack: 6
                    });

                    RefrescarGrid();

                    $('#ModalWareHouse').modal('hide');


                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                    notification.show({
                        title: "Validación",
                        message: textStatus + ": " + XMLHttpRequest.responseText
                    }, "error");

                }
            });

        }
        else {
            notification.show({
                title: "Validación",
                message: "Datos invalidos en el formulario"
            }, "error");
        }

        $("#btnWareHouse").hide();
        $("#btnWareHouse").prop("disabled", true);

    }
</script>


<div id="ModalWareHouse" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Bodegas</h4>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmWareHouse" kendo-validator="true"
                                      data-ajax="true"
                                      data-ajax-method="post"
                                      data-ajax-begin="SaveWareHouse"
                                      class="validation-wizard wizard-circle">

                                    <div class="form-body">
                                        <h3 class="card-title">Sucursales</h3>
                                        <hr>
                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="BranchId" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="BranchId" name="BranchId" class="form-control" disabled="disabled" style="min-width:100%" />
                                                    <span asp-validation-for="BranchId" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="WarehouseName" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="WarehouseName" name="WarehouseName" class="form-control" disabled="disabled" style="min-width:100%" />
                                                    <input type="hidden" asp-for="WarehouseId" />
                                                    <span asp-validation-for="WarehouseName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Description" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Description" name="Description" class="form-control" style="min-width:100%" />
                                                    <span asp-validation-for="Description" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">                                                
                                                 
                                                            <label asp-for="IdEstado" class=" control-label" style="width:100%"></label>
                                                            <kendo-dropdownlist name="IdEstadowarehouse"
                                                                                id="IdEstadowarehouse"
                                                                                for="@Model.IdEstado"
                                                                                filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                                option-label="Seleccionar Estado"
                                                                                required
                                                                                datatextfield="NombreEstado"
                                                                                datavaluefield="IdEstado"
                                                                                style="width: 100%;">
                                                                <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                                    <transport>
                                                                        <read url="@Url.Action("GetGrupoEstadoUno", "Estados")" />
                                                                    </transport>
                                                                </datasource>
                                                            </kendo-dropdownlist>
                                                       
                                                    <span asp-validation-for="IdEstado" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button id="btnWareHouse" class="form-control btn-miboton" type="submit"> Guardar </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>