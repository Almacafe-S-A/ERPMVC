                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Departamento" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Departamento" name="Departamento" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Departamento" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Municipio" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Municipio" name="Municipio" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Municipio" class="text-danger"></span>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Pais" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Pais" name="Pais" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Pais" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Observacion" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Observacion" name="Observacion" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Observacion" class="text-danger"></span>
