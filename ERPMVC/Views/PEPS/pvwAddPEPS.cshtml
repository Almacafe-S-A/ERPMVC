                                                    <span asp-validation-for="DocumentDate" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Funcionario" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="Funcionario" name="Funcionario" class="form-control" autocomplete="off" style="width:100%" />
