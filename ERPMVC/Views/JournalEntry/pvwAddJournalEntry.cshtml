            'DatePosted': $("#DatePosted").getKendoDatePicker().value().toJSON(),
            'Memo': $("#Memo").val(),
            'ReferenceNo': 0,
            'TotalCredit': $("#TotalCredit").val(), 
            'TotalDebit': $("#TotalDebit").val(), 
            'TypeOfAdjustmentId': $("#TypeOfAdjustmentId").val(),
