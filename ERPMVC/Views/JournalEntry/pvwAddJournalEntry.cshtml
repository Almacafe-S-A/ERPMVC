        var Debito = $("#TotalDebit").val();
        var Credito = $("#TotalCredit").val();
        if (Number(Credito) != Number(Debito)) {
                alert("La partida contable no esta cuadrada");
                return
            } 
        else if (Number(Credito) == 0 && Number(Debito)==0) {
