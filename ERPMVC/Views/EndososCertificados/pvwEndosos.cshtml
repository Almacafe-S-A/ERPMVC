        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Información Endosos</h4>
                <button type="button" class="close" onclick="closeEndosos();">&times;</button>
            </div>
            <div class="modal-body">


