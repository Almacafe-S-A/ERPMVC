            Quantity: $("#Quantity").val(),
            TipoCobroId: $("#TipoCobroId").val(),
            TipoCobroName: TipoCobro,
            PeriodoCobro: $("#PeriodoCobro").val(),


        };
        console.log(dataObject)


        return dataObject;
    }

