@model Int64

<kendo-dropdownlist name="CustomerTypeId" for="@Model"
                    filter="Kendo.Mvc.UI.FilterType.Contains"
                    option-label="Seleccione el Tipo de Cliente"
                    datatextfield="CustomerTypeName"
                    datavaluefield="CustomerTypeId"
                    class="form-control-line"
                    style="width: 100%;">
    <datasource type="DataSourceTagHelperType.WebApi" server-operation="true" page-size="9999999">
        <transport>
            <read url="@Url.Action("Get", "CustomerType")" />
        </transport>
    </datasource>
</kendo-dropdownlist>