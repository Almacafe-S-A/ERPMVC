
@model string
@Html.TextBoxFor(model => model, new { @class = "k-textbox decimales", type = "text", min =0, onkeypress = "return decimals(event)" })


<script>

    $('.decimales').on('input', function decimals(e) {
        this.value = this.value.replace(/[^0-9,.]/g, '').replace(/,/g, '.');
    });

</script>