@model ERPMVC.Models.TipoBonificacion

<kendo-dropdownlist for="@Model"
                    filter="Kendo.Mvc.UI.FilterType.Contains"
                    option-label="Seleccione el Tipo de Bonificación"
                    datatextfield="Nombre"
                    datavaluefield="Id"
                    class="form-control-line"
                    style="width: 100%;">
    <datasource type="DataSourceTagHelperType.WebApi" server-operation="true" page-size="9999999">
        <transport>
            <read url="@Url.Action("GetTiposBonificacionesActivos", "TipoBonificacion")" />
        </transport>
    </datasource>
</kendo-dropdownlist>