    <script>
        function error_handler(e) {
            debugger;
            var error = '';
            if (e.errors == null) {
                error = e.xhr.responseText;
            } else {
                error = e.errors;
            }

            if (error.length > 100) {
                error = "Server Error";
            }

            if (e.status == "customerror") {
                $.toast({
                    heading: 'Error',
                    text: e.errors,
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: 'error',
                    hideAfter: 30000,
                    stack: 6
                });
            }
            else {

                $.toast({
                    heading: 'Validacion',
                    text: error,
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: 'error',
                    hideAfter: 30000,
                    stack: 6
                });
            }
        }
        kendo.culture("es-HN");
    </script>
