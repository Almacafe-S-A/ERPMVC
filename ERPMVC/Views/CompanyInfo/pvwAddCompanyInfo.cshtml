@model ERPMVC.DTO.CompanyInfoDTO

@{ Layout = null;
    var messages = new Dictionary<string, string>() { { "custom", "Ingrese un valor correcto." },
   // {"required","Valor requerido" }
};
    var rules = new Dictionary<string, string>() { { "custom", "customFunction" } };
}

<script>

    function customFunction(input) {

        if (input.attr('name') === "BranchId" && input.val() === "0") {
            return false;
        }

    }


</script>



<div id="ModalCompanyInfo" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">CompanyInfo</h4>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmCompanyInfo" kendo-validator="true"
                                    data-ajax="true"
                                    data-ajax-method="post"
                                    data-ajax-begin="SaveCompanyInfo"
                                    class="validation-wizard wizard-circle">
                                    <div class="form-body">
                                        <h3 class="card-title">Información de la empresa</h3>
                                        <hr>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="CompanyInfoId" class=" control-label" style="width:100%">Id CompanyInfo</label>
                                                    <input type="text" asp-for="CompanyInfoId" name="IdCompanyInfo" class="form-control" disabled="disabled" style="width:100%" />
                                                    <span asp-validation-for="CompanyInfoId" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Company_Name" class=" control-label" style="width:100%">Nombre de la empresa</label>
                                                    <input type="text" asp-for="Company_Name" name="Company_Name" class="form-control" style="width:100%" />
                                                    <span asp-validation-for="Company_Name" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Address" class=" control-label" style="width:100%">Dirección</label>
                                                    <input type="text" asp-for="Address" name="Address" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Address" class="text-danger"></span>
                                                </div>
                                            </div>



                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Phone" class=" control-label" style="width:100%">Teléfono</label>
                                                    <input type="text" asp-for="Phone" name="Phones" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Fax" class=" control-label" style="width:100%">Fax</label>
                                                    <input type="text" asp-for="Fax" name="Fax" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Tax_Id" class="control-label">Impuesto</label>
                                                    <kendo-dropdownlist name="Tax_Id"
                                                                        for="@Model.Tax_Id"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Impuesto"
                                                                        datatextfield="Description"
                                                                        datavaluefield="TaxId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetTaxes", "Tax")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="CountryId" class="control-label">País</label>
                                                    <kendo-dropdownlist name="Tax_Id"
                                                                        for="@Model.CountryId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar País"
                                                                        datatextfield="Name"
                                                                        datavaluefield="Id"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("Get", "Country")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Manager" class=" control-label" style="width:100%">Manager</label>
                                                    <input type="text" asp-for="Manager" name="Manager" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="Manager" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="PostalCode" class=" control-label" style="width:100%">Código Postal</label>
                                                    <input type="text" asp-for="PostalCode" name="Manager" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="PrintHeader" class=" control-label" style="width:100%">Encabezado de impresión</label>
                                                    <input type="text" asp-for="PrintHeader" name="PrintHeader" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="PrintHeader" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="RTNMANAGER" class=" control-label" style="width:100%">RTN Manager</label>
                                                    <input type="text" asp-for="RTNMANAGER" name="RTNMANAGER" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="RTNMANAGER" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="RevOffice" class=" control-label" style="width:100%">Rev Office</label>
                                                    <input type="text" asp-for="RevOffice" name="RevOffice" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="RevOffice" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="demo-section k-content">
                                                    <input name="image" id="image" type="file" aria-label="files" />
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-md-12">
                                                <button id="btnCompanyInfo" class="form-control btn-miboton" type="submit"> Guardar </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>


    function RefreshCotizaciones() {
       // $("#myModalGoodsDelivered").modal('hide');
        var grid = $("#gridCompanyInfo").getKendoGrid();
        grid.dataSource.read();
    }

        function SaveCompanyInfo(e) {

            var notification = $("#notification").data("kendoNotification");
           // e.preventDefault();
            $("#btnCompanyInfo").hide();
            $("#btnCompanyInfo").prop("disabled", true);

            var displayedData = $("#gridCompanyInfo").data().kendoGrid.dataSource.view();

            var dataObject = {
                'CompanyInfoId': $("#CompanyInfoId").val() === "" ? "0" : $("#CompanyInfoId").val(),
                'Company_Name': $("#Company_Name").val(),
                'Address': $("#Address").val(),
                'Phone': $("#Phone").val(),
                'Fax': $("#Fax").val(),
                'Email': $("#Email").val(),
                'Tax_Id': $("#Tax_Id").val(),
                'image': $("#image").val(),
                'CountryId': $("#CountryId").val(),
                'CountryName': $("#CountryId").data("kendoDropDownList").text(),
                'Manager': $("#Manager").val(),
                'PostalCode': $("#PostalCode").val(),
                'PrintHeader': $("#PrintHeader").val(),
                'RTNMANAGER': $("#RTNMANAGER").val(),
                'RevOffice': $("#RevOffice").val(),
                'image': $("#image").val(),

                  //'FechaCreacion': $("#FechaCreacion").val(),
                  //'FechaModificacion':$("#FechaModificacion").val(),
                  //'UsuarioCreacion':$("#UsuarioCreacion").val(),
                  //'UsuarioModificacion':$("#UsuarioModificacion").val(),
                 // '_CompanyInfo': displayedData
            };

             //console.log(JSON.stringify(dataObject));
             //var form = $("#frmNumeracion");
             //form.validate();
            //console.log(dataObject);
            var validator = $("#frmCompanyInfo").data("kendoValidator");
                 var status = $(".status");
           // console.log(validator)
            //console.log('VERIFICAR',displayedData.length)
            if (displayedData.length > 0) {
                if (validator.validate()) {

                    $.ajax({
                        url: '@Url.Action("SaveCompanyInfo", "CompanyInfo")',
                        method: 'POST',
                        datatype: "json",
                        contentType: 'application/json',
                        async: false,
                        data: JSON.stringify(dataObject),
                        success: function (data) {

                            //notification.show({
                            //    message: "Guardado correctamente!"
                            //}, "upload-success");
                            $.toast({
                                heading: 'Satisfactorio',
                                text: 'Datos guardados correctamente.',
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'success',
                                hideAfter: 30000,
                                stack: 6
                            });

                            RefreshCotizaciones();

                            $('#ModalCompanyInfo').modal('hide');


                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            console.log('VERIFICAR')

                            notification.show({
                                title: "Validacion",
                                message: textStatus + ": " + XMLHttpRequest.responseText
                            }, "error");

                        }
                    });

                }
                else {
                    status.text("Oops! There is invalid data in the form.")
                        .removeClass("valid")
                        .addClass("invalid");
                }
            }
            else {
                notification.show({
                    title: "Validacion",
                    message: "Debe agregar los productos!"
                }, "error");
               // notification.show("New E-mail","Debe agregar los productos", "info");
                //alert('Debe agregar los productos!!');
            }

            $("#btnCompanyInfo").show();
            $("#btnCompanyInfo").prop("disabled", false);
    }
</script>
