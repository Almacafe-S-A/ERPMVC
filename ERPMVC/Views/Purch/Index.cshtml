@using Kendo.Mvc.UI

@{
    ViewData["Title"] = "Proveedores";
}

<script>

    function onsave(e) {
     //   console.log(new Date(e.model.FechaRecepcion).toISOString());
       // e.model.set('FechaRecepcion', new Date(e.model.FechaRecepcion).toISOString());
    }


      function AddPurch() {



          $('#ModalPurch').find(':input').not(':submit').val('');

          $('#ModalPurch').modal('show');
          $("#PurchId").val('0');




      }


    function EditPurch(e) {
             e.preventDefault();
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
            var dataObject = {
                PurchId: dataItem.PurchId,
                editar : 0
            };

            $.ajax({
                url: '@Url.Action("pvwAddPurch", "Purch")',
                method: 'POST',
                datatype: "json",
                contentType: 'application/json',
                async: false,
                data: JSON.stringify(dataObject),
                success: function (result) {
                    $("#NumPurch").html('');
                    $("#NumPurch").html(result);


                    //$("#btnCAI").hide();
                    $('#ModalPurch').modal('show');
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(textStatus + ": " + XMLHttpRequest.responseText);
                }
            });
    }

    function DetallesPurch(e) {          
        e.preventDefault();
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        window.location.href = "@Url.Action("Proveedores", "Purch")?PurchId=" + dataItem.PurchId;  
        //update => update.Action("Update", "Purch", new { TypeAccountId = "{0}" }).Type(HttpVerbs.Put)
    }

</script>

<h3 class="text-themecolor">Proveedores</h3>
@(Html.Kendo().Grid<ERPMVC.Models.Purch>
    ()
    .Name("gridNumeracionPurch")
    .Columns(columns =>
    {
        columns.Command(command =>
        {

            command.Custom("Ver detalles").Text(" ").IconClass("far fa-list-alt").Click("DetallesPurch");
            command.Custom("Editar").Text(" ").IconClass("fa fa-edit").Click("EditPurch");
           // command.Custom("Editar").Click("EditPurch");
            //  command.Destroy();
        }).Width(100);

        columns.Bound(p => p.PurchId).Title("Id").Width(1);
        columns.Bound(p => p.PurchName).Title("Nombre de Proveedor").Width(250);
        columns.Bound(p => p.CreatedDate).Title("Fecha de Creación").Format("{0:dd/MM/yyyy}").Width(200);
        columns.Bound(p => p.Phone).Title("Telefono").Width(150);
       })
    .Filterable(f => f.Operators(o => o.ForString(s => s
    .Clear()
    .Contains("Contiene")
    .DoesNotContain("No contiene")
    .EndsWith("Termina con")
    .IsEqualTo("Es igual a")
    .IsNotEqualTo("No es igual a")
    .IsNull("Es nulo")
    .StartsWith("Inicia con")


    )
    .ForNumber(n => n
    .Clear()
    .IsEqualTo("Es igual a")
    .IsGreaterThan("Es mayor que")
    .IsLessThan("Es menor que")
    .IsNull("Es nulo")
    .IsLessThanOrEqualTo("Es menor o igual que")
    .IsGreaterThanOrEqualTo("Es mayor o igual que")
    )
    .ForDate(d => d
    .Clear()
    .IsEqualTo("Es igual que")
    .IsGreaterThan("Es mayor que")
    .IsLessThan("Es menor que")
    .IsLessThanOrEqualTo("Es menor o igual que")
    .IsGreaterThanOrEqualTo("Es mayor o igual que")
    .IsNotEqualTo("No es igual que")
    )
    ))
    .ToolBar(tools =>
    {
        // tools.Create();
        tools.Custom().Text("Agregar").IconClass("k-icon k-i-plus")
        .HtmlAttributes(new { @class = "k-i-plus-sm", onclick = "AddPurch()" });
        tools.Excel().Text("Exportar a excel").HtmlAttributes(new { @class = "toolbar-field" });
        tools.Pdf().Text("Exportar a pdf").HtmlAttributes(new { @class = "toolbar-field" });



    })
    .Editable(e => e.Mode(GridEditMode.PopUp).ConfirmDelete("¿Esta seguro que desea eliminar este registro?"))
    .Sortable()
    .Pageable()
    .Filterable()
    .Scrollable()
    .Pdf(pdf => pdf.FileName("PurchReport" + DateTime.Now.Year + "_" + DateTime.Now.Month + "_"
    + DateTime.Now.Day + "_" + DateTime.Now.Hour + "_" + DateTime.Now.Minute + "_" + DateTime.Now.Second + ".pdf")
    .ProxyURL(Url.Action("Export", "Home")).AllPages())
    .Excel(excel => excel.FileName("PurchReport_" + DateTime.Now.Year + "_" + DateTime.Now.Month + "_"
    + DateTime.Now.Day + "_" + DateTime.Now.Hour + "_" + DateTime.Now.Minute + "_" + DateTime.Now.Second + ".xlsx").Filterable(true)
    .ProxyURL(Url.Action("Export", "Home")).AllPages(true))
    .DataSource(dataSource =>
    dataSource
    .WebApi()

    .ServerOperation(true)
    .Model(model =>
    {
        model.Id(p => p.PurchId);
        model.Field(p => p.PurchName).Editable(true);

    })
    .Events(events => events.Error("error_handler"))
    .Read(read => read.Action("GetPurch", "Purch"))
    .Create(create => create.Action("Insert", "Purch"))
    .Update(update => update.Action("Update", "Purch", new { TypeAccountId = "{0}" }).Type(HttpVerbs.Put))
    //.Destroy(destroy => destroy.Action("Delete", "TypeAccount", new { Num = "{1}" }).Type(HttpVerbs.Delete))

    )
    .Events(e =>
    {
        e.Save("onsave");

    })
    )


    <div id="NumPurch">
        @await Html.PartialAsync("pvwAddPurch", new ERPMVC.DTO.PurchDTO { PurchId = 0 })
    </div>
