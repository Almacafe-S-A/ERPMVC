          // $('#myModalBoletaDeSalida').find(':select').not(':submit').val('0');
     //   $("#ProductId").data("kendoDropDownList").value(0);
      
    }

    function RefreshGridBoletaDeSalida() {
        var grid = $("#gridBoletaDeSalida").getKendoGrid();
        grid.dataSource.read();
    }
</script>


