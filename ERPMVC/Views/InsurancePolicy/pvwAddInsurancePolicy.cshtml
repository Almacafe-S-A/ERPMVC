                                            </kendo-upload>
                                        </div>

                                        <script>
                                            //function OnChange(e, target) {
                                            //    console.log(e);
                                            //    target.val( e.sender.data("kendoDropDownList").text());

                                            //}
                                                function GetDocumentName(dataName) {
                                                    var fileName = "@Model.AttachementFileName";
                                                    return fileName
                                                }
                                                function GetDocumentExtension(dataExtension) {
                                                    var fileName = "@Model.AttachementFileName";
                                                    var fileExtension = fileName.substring(fileName.lastIndexOf('.') + 1);
                                                    return fileExtension
                                                }
                                        </script>
                                    </div>
                                    <div class="col-sm-4 col-md-4">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">Foto Empleado</h4>
                                                <input type="file" asp-for="AttachementFileName" id="files" name="files" class="dropify" data-max-file-size="2M" accept=".jpg,.jpeg,.png,.gif,.pdf" />
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <button id="btnInsurancePolicy" class="form-control btn-miboton" type="submit"> Guardar </button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Basic
        $('.dropify-std').dropify();

        // Translated
        $('.dropify').dropify({
            messages: {
                default: 'Arrastre un archivo de Imagen o click para cagar archivo',
                replace: 'Click para Reemplazar',
                remove: 'Quitar',
                error: 'Error'

            }
        });

        // Used events
        var drEvent = $('#input-file-events').dropify();

        drEvent.on('dropify.beforeClear', function (event, element) {
            return confirm("Esta seguro que desea eliminar el archivo \"" + element.file.name + "\" ?");
        });

        drEvent.on('dropify.afterClear', function (event, element) {
            alert('Archivo eliminado');
        });

        drEvent.on('dropify.errors', function (event, element) {
            console.log('Has Errors');
        });

        var drDestroy = $('#input-file-to-destroy').dropify();
        drDestroy = drDestroy.data('dropify')
        $('#toggleDropify').on('click', function (e) {
            e.preventDefault();
            if (drDestroy.isDropified()) {
                drDestroy.destroy();
            } else {
                drDestroy.init();
            }
        })
    });

</script>
