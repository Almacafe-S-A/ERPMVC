                                                                      maxlength="20"
                                                                      style="width:100%"
                                                                      value="Model.DollarAmount" />
                                                <span asp-validation-for="DollarAmount" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" hidden>
                                        <div class="col-md-5">
                                            <kendo-upload show-file-list="true" drop-zone="drop-zone1" name="files" on-upload="SaveInsurancePolicy" multiple="false" accept=".jpg,.jpeg,.png,.gif,.pdf">
