<div id="myModalInsurancePolicy" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Póliza</h4>
                <button type="button" class="close" onclick="closeInsurancePolicy();">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="InsuracesDocument" kendo-validator="true" kendo-messages="messages" asp-action="SaveInsurancePolicy" asp-controller="InsurancePolicy"
                                      data-ajax="true"
                                      data-ajax-method="post" enctype="multipart/form-data"
                                      data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                                      data-ajax-failure="onFailed" data-ajax-success="onSuccess">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="InsurancePolicyId" class="control-label" style="min-width:100%">Id Póliza</label>
                                                <input readonly class="k-textbox" asp-for="InsurancePolicyId" name="InsurancePolicyId" style="min-width:100%" />
                                                <span asp-validation-for="InsurancePolicyId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="PolicyNumber" class="control-label" style="min-width: 100%;">Número de Póliza</label>
                                                <input type="text" name="PolicyNumber" min="0" required maxlength="30" asp-for="PolicyNumber" class="k-textbox" style="min-width:100%" data-required-msg="El Número de Póliza es requerido." onKeyPress="return soloNumeros(event)" />

                                            </div>
                                        </div>
                                        @if (Model.InsurancePolicyId > 0)
                                        {
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="PolicyDate" class="control-label" style="min-width:100%">Fecha de Emisión</label>
                                                    <kendo-datepicker name="PolicyDate" style="width: 100%;" for="PolicyDate"
                                                                      format="dd/MM/yyyy" readonly
                                                                      data-val-required="La Fecha de Emisión es requerida." onchange="setMinFechaFinal()"
                                                                      />
                                                    <span asp-validation-for="PolicyDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="PolicyDate" class="control-label" style="min-width:100%">Fecha de Emisión</label>
                                                    <kendo-datepicker name="PolicyDate" style="width: 100%;" for="PolicyDate" max="DateTime.Now"
                                                                      format="dd/MM/yyyy"
                                                                      data-val-required="La Fecha de Emisión es requerida."  onchange="setMinFechaFinal()"
                                                                      />
                                                    <span asp-validation-for="PolicyDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                        }
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="PolicyDueDate" class=" control-label" style="min-width:100%">Fecha de Vencimiento</label>
                                                @if (Model.InsurancePolicyId > 0)
                                                {
                                                    <kendo-datepicker name="PolicyDueDate" style="width: 100%;"
                                                                      format="dd/MM/yyyy" readonly for="PolicyDueDate"
                                                                      data-val-required="La Fecha de Vencimiento es requerida."
                                                                      min="@Model.PolicyDate"
                                                                       />
                                                }
                                                else
                                                {
                                                    <kendo-datepicker name="PolicyDueDate" style="width: 100%;" for="PolicyDueDate"
                                                                      format="dd/MM/yyyy" min="@DateTime.Now"

                                                                      data-val-required="La Fecha de Vencimiento es requerida."
                                                                      value="null" />
                                                }
                                                <span asp-validation-for="PolicyDueDate" class="text-danger"></span>

                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="InsurancesId" class="control-label" style="min-width: 100%;">Aseguradora</label>
                                                <input type="text" asp-for="InsurancesName" name="InsurancesName" hidden />
                                                <kendo-dropdownlist name="InsurancesId" for="@Model.InsurancesId" filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                    option-label="Seleccione la aseguradora"
                                                                    datatextfield="InsurancesName"
                                                                    datavaluefield="InsurancesId"
                                                                    required
                                                                    data-required-msg="La Aseguradora es requerida."
                                                                    onchange="SetInsuranceName()"
                                                                    class="form-control-line"
                                                                    style="min-width: 100%;">
                                                    <datasource type="DataSourceTagHelperType.WebApi" server-operation="true" page-size="9999999">
                                                        <transport>
                                                            <read url="@Url.Action("Get", "Insurances")" />
                                                        </transport>
                                                    </datasource>
                                                </kendo-dropdownlist>
                                                <span asp-validation-for="InsurancesId" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="EstadoId" class=" control-label" style="width:100%">Estado</label>                                                
                                                    <kendo-dropdownlist name="Status" for="EstadoId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Estado"
                                                                        datatextfield="NombreEstado"
                                                                        datavaluefield="IdEstado"
                                                                        on-change="SetEstado"
                                                                        data-required-msg="El Estado es requerido"
                                                                        required
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetporGrupoEstado", "Estados", new {GrupoId = 32 })" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                
                                                <span asp-validation-for="EstadoId" class="text-danger"></span>
                                            </div>
                                            <input type="text" asp-for="Estado" hidden />
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="LpsAmount" class="control-label" style="width:100%">Monto Lempiras</label>
                                                <kendo-numerictextbox name="LpsAmount"
                                                                      format="c2"
                                                                      min="0"
                                                                      spinners="false"
                                                                      required data-required-msg="El Monto Lempiras es requerido."
                                                                      decimals="2"
                                                                      maxlength="9"
                                                                      style="width:100%"
                                                                      value="@Model.LpsAmount" />
                                                <span asp-validation-for="LpsAmount" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="DollarAmount" class="control-label" style="width:100%">Monto Dolares</label>
                                                <kendo-numerictextbox name="DollarAmount"
                                                                      format="c2"
                                                                      min="0"
                                                                      culture="en-US"
                                                                      spinners="false"
                                                                      decimals="2"
                                                                      required data-required-msg="El Monto Dolares es requerido."
                                                                      maxlength="20"
                                                                      style="width:100%"
                                                                      value="@Model.DollarAmount" />
                                                <span asp-validation-for="DollarAmount" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="control-label">Propia</label>
                                                <kendo-switch name="Propias" enabled="true" for="Propias" on-change="SetPropia" checked="@Model.Propias">
                                                    <messages checked="Si" unchecked="No" />
                                                </kendo-switch>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group" id="cliente" style=" display:none;">
                                                <label class="control-label" style="min-width:100%;">Cliente</label>
                                                <kendo-dropdownlist name="CustomerId" for="CustomerId"
                                                                    filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                    option-label="Seleccionar Cliente"
                                                                    datatextfield="CustomerName"
                                                                    datavaluefield="CustomerId"
                                                                    on-change="SetCliente"
                                                                    style="width: 100%;">
                                                    <datasource type="DataSourceTagHelperType.WebApi" server-operation="true" page-size="99999999">
                                                        <transport>
                                                            <read url="@Url.Action("Get", "Customer")" />
                                                        </transport>
                                                    </datasource>
                                                </kendo-dropdownlist>
                                                <input type="text" asp-for="CustomerName" value="@Model.CustomerName" hidden/>
                                            </div>
                                            <div class="form-group" id="tasadeducible">
                                                <label asp-for="ReductibleRate" class="control-label" style="width:100%">Tasa Deducible</label>
                                                <kendo-numerictextbox name="ReductibleRate" for="ReductibleRate"
                                                                      format="n2"
                                                                      min="0"
                                                                      max="100"
                                                                      step="1"
                                                                      onchange="SetCustomerName()"
                                                                      spinners="false"
                                                                      style="width:100%" />
                                                <span asp-validation-for="LpsAmount" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group" id="tasamercaderias">
                                                <label asp-for="MerchandiseRate" class="control-label" style="width:100%">Tasa de Mercaderias</label>
                                                <kendo-numerictextbox name="MerchandiseRate" for="MerchandiseRate"
                                                                      format="n2"
                                                                      min="0"
                                                                      max="100"
                                                                      step="1"
                                                                      spinners="false"
                                                                      style="width:100%" />
                                                <span asp-validation-for="DollarAmount" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="InsuredTotal" class="control-label" style="width:100%">Total Asegurado</label>
                                                <kendo-numerictextbox name="InsuredTotal" for="InsuredTotal"
                                                                      format="c2"
                                                                      min="0"
                                                                      spinners="false"
                                                                      decimals="2"
                                                                      maxlength="20"
                                                                      style="width:100%"
                                                                      value="@Model.InsuredTotal" />
                                                <span asp-validation-for="InsuredTotal" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>



                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label"> Extensiones Permitidas: .pdf, .jpeg, .png y .txt</label>
                                                <kendo-upload drop-zone="drop-zone1" name="files" on-upload="SaveInsurancePolicy" multiple="false" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.gif" on-select="ReemplazarArchivo">
                                                    <localization select="Adjuntar Archivo" cancel="Cancelar" drop-files-here="Soltar Archivo aquí" invalid-file-extension="Extensión de Archivo Invalido" retry="Reintentar" />
                                                    <files />
                                                    <validation max-file-size="10485760" />
                                                </kendo-upload>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label" style="min-width:100%">Archivo Adjunto</label>
                                                <input type="text" asp-for="AttachementFileName" id="AttachementFileName" class="k-textbox" style="min-width:80%" readonly />
                                                @if (Model.AttachementFileName != null)
                                                {


                                                    <button type="button" onclick="DescargarAdjunto()" class="btn btn-success">Descargar</button>


                                                }
                                                else
                                                {
                                                    <button type="button" onclick="DescargarAdjunto()" class="btn btn-success" disabled>Descargar</button>
                                                }
                                            </div>

                                        </div>




                                        <input type="text" asp-for="AttachmentURL" hidden />

                                    </div>
                                    <div class="modal-footer">
                                        <div class="col-md-12">
                                            <button id="btnInsurancePolicy" class="form-control btn-miboton" type="submit"> Guardar </button>
                                        </div>
                                    </div>

                                </form>
                                @if (Model.InsurancePolicyId != 0)
                                {
                                    <div>
                                        @if (Model.Propias)
                                        {
                                            @await Html.PartialAsync("InsuredAssets", new ERPMVC.Models.InsuredAssets { InsurancePolicyId = Model.InsurancePolicyId }, ViewData);
                                        }
                                        else
                                        {
                                            @await Html.PartialAsync("InsuranceEndorsement", new ERPMVC.Models.InsuranceEndorsement { InsurancePolicyId = Model.InsurancePolicyId }, ViewData);
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>

    function SetCliente() {
        var cliente = $("#CustomerId").data("kendoDropDownList").text()
        $("#CustomerName").val(cliente);
    }
