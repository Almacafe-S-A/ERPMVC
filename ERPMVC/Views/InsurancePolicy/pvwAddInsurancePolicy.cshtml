                                            <div class="form-group">
                                                <label asp-for="DollarAmount" class="control-label" style="width:100%">Monto Dolares</label>
                                                <kendo-numerictextbox name="DollarAmount"
                                                                      format="'$.' #.## "
                                                                      min="0"
                                                                      spinners="false"
