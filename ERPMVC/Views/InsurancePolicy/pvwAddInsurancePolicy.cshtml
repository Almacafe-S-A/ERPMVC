@model ERPMVC.DTO.InsurancePolicyDTO
@{ Layout = null;
    var messages = new Dictionary<string, string>() { { "custom", "Ingrese un valor correcto." },
{"required","Valor requerido" }
};
    var rules = new Dictionary<string, string>() { { "custom", "customFunction" } };


}



<script src="~/admp/assets/plugins/dropify/dist/js/dropify.min.js"></script>

<link rel="stylesheet" href="~/admp/assets/plugins/dropify/dist/css/dropify.min.css">

<script>
    //Retornar solo numeros
    function soloNumeros(e) {
        var key = window.Event ? e.which : e.keyCode
        return ((key >= 48 && key <= 57) || (key == 8))
    }
    //Validación de Fechas
    $("#PolicyDueDate").change(function () {
        var FechaInicio = $("#PolicyDate").getKendoDateTimePicker().value().toJSON();
        var FechaVencimiento = $("#PolicyDueDate").getKendoDateTimePicker().value().toJSON();
        if (Date.parse(FechaInicio) >= Date.parse(FechaVencimiento)) {
            alert("Fecha de Vencimiento no puede ser menor que la fecha de emisión.")
            $("#PolicyDueDate").val('');
        }
    });


    function SaveInsurancePolicy(e) {

        var displayedData = $("#gridInsurancePolicy").data().kendoGrid.dataSource.view();

        //var formdata = new FormData($('#CustomerDocument').get(0));

        var dataObject = {
            'InsurancePolicyId': $("#InsurancePolicyId").val(),
            'PolicyNumber': $("#PolicyNumber").val(),
            'PolicyDate': $("#PolicyDate").getKendoDateTimePicker().value().toJSON(),
            'PolicyDueDate': $("#PolicyDueDate").getKendoDateTimePicker().value().toJSON(),
            'InsurancesId': $("#InsurancesId").val(),
            'InsurancesName': $("#InsurancesId").data("kendoDropDownList").text(),
            'CustomerId': $("#CustomerId").val(),
            'CustomerName': $("#CustomerId").data("kendoDropDownList").text(),
            'LpsAmount': $("#LpsAmount").val(),
            'DollarAmount': $("#DollarAmount").val(),
            'AttachmentURL': $("#AttachmentURL").val(),
            'Status': $("#Status").val(),
            '_InsurancePolicy': displayedData

        };

        e.data = dataObject;
        RefrescarGrid();

    }
    function RefrescarGrid() {
        var grid = $("#gridInsurancePolicy").getKendoGrid();
        grid.dataSource.read();

    }

    function closeInsurancePolicy() {
        RefrescarGrid();
        $("#myModalInsurancePolicy").modal('hide');



    }

    var onBegin = function () {
        //alert("Begin");

    };

    var onComplete = function () {
        RefrescarGrid();
    };

    var onSuccess = function (context) {
        //alert(context);
        console.log(context);
        $.toast({
            heading: 'Satisfactorio',
            text: '<br/><br/> Datos guardados correctamente.',
            position: 'top-right',
            loaderBg: '#ff6849',
            icon: 'success',
            hideAfter: 30000,
            stack: 6
        });
        closeInsurancePolicy();
    };

    var onFailed = function (context) {
        // alert(context);
        console.log(context);
        $.toast({
            heading: 'Error',
            text: '<br/><br/> Error ',// + context.error,
            position: 'top-right',
            loaderBg: '#ff6849',
            icon: 'error',
            hideAfter: 30000,
            stack: 6
        });
    };

</script>


