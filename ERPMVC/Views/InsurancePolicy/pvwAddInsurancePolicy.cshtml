    }
    $(function () {
        var check = $("#Propias").data("kendoSwitch");
        SetPropia(check.options);
    });


    function SetPropia (e) {
        debugger;
        console.log(e);
        var propia = e.checked;
        if (propia == true) {
            $("#cliente").hide();
            $("#tasamercaderias").show();
            $("#tasadeducible").show();
            $("#activos").show();
        } else {
            $("#cliente").show();
            $("#tasamercaderias").hide();
            $("#tasadeducible").hide();
            $("#endosos").show();
        }
    }

    function ReemplazarArchivo() {
        debugger;
        var archivo = '@Model.AttachmentURL';

        if ($("#AttachementFileName").val() != '') {
            alert("Esta accion reemplazara su archivo anterior");

        }
    }

    function SetInsuranceName() { $('#InsurancesName').val($('#InsurancesId').data("kendoDropDownList").text()) }

    function SetCliente() { $('#CustomerName').val($('#CustomerId').data("kendoDropDownList").text()) }

    

    var onBegin = function () {
        //alert("Begin");
        $("#btnInsurancePolicy").attr("disabled", true);
    };

    var onComplete = function () {
        var grid = $("#gridInsurancePolicy").getKendoGrid();
        grid.dataSource.read();
    };

    

    var onSuccess = function (context) {
        console.log(context);
        $.toast({
            heading: 'Satisfactorio',
            //text: 'Datos guardados correctamente, Generado asiento No.' + context.response,
            text: 'Datos guardados correctamente',
            position: 'top-right',
            loaderBg: '#ff6849',
            icon: 'success',
            hideAfter: 30000,
            stack: 6
        });
        $('#myModalInsurancePolicy').modal('hide');
    };

    var onFailed = function (context) {
        console.log(context);
        var error = context.responseText;        
            $.toast({
                heading: 'Error',
                text: error,
                position: 'top-right',
                loaderBg: '#ff6849',
                icon: 'error',
                hideAfter: 30000,
                stack: 6
            });
        
        
        $("#btnInsurancePolicy").attr("disabled", false);
    };

    //Validación de Fechas
    function setMinFechaFinal() {
        var _fechaInicioVigencia = "";
        var _fechaFinalVigencia = "";
        if ($("#PolicyDate").getKendoDatePicker().value() != null || $("#PolicyDate").getKendoDatePicker().value() != undefined || $("#PolicyDate").val() != "") {
            _fechaInicioVigencia = $("#PolicyDate").getKendoDatePicker().value().toJSON()

            $("#PolicyDueDate").kendoDatePicker("min", _fechaInicioVigencia)

            if ($("#PolicyDueDate").getKendoDatePicker().value() != null || $("#PolicyDueDate").getKendoDatePicker().value() != undefined || $("#PolicyDueDate").val() != "") {
                _fechaFinalVigencia = $("#PolicyDueDate").getKendoDatePicker().value().toJSON()
                if (_fechaInicioVigencia > _fechaFinalVigencia) {
                    $("#PolicyDueDate").val(null);
                    $.toast({
                        heading: 'Validación',
                        text: "La Fecha de Vencimiento no puede ser menor que la Fecha Emisión!",
                        position: 'top-right',
                        loaderBg: '#ff6849',
                        icon: 'error',
                        hideAfter: 30000,
                        stack: 6
                    });
                }
            }
        }
    }
</script>