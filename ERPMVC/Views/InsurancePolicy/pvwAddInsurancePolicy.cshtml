    function SaveInsurancePolicy(e) {
        debugger;
        var displayedData = $("#gridInsurancePolicy").data().kendoGrid.dataSource.view();

        //var formdata = new FormData($('#CustomerDocument').get(0));

        var dataObject = {
            'InsurancePolicyId': $("#InsurancePolicyId").val(),
            'PolicyNumber': $("#PolicyNumber").val(),
            'PolicyDate': $("#PolicyDate").getKendoDatePicker().value().toJSON(),
            'PolicyDueDate': $("#PolicyDueDate").getKendoDatePicker().value().toJSON(),
            'InsurancesId': $("#InsurancesId").val(),
            'InsurancesName': $("#InsurancesId").data("kendoDropDownList").text(),
            'CustomerId': $("#CustomerId").val(),
            'CustomerName': $("#CustomerId").data("kendoDropDownList").text(),
            'LpsAmount': $("#LpsAmount").val(),
            'DollarAmount': $("#DollarAmount").val(),
            'AttachmentURL': $("#AttachmentURL").val(),
            'EstadoId': $("#EstadoId").data("kendoDropDownList").text(),
            '_InsurancePolicy': displayedData

        };

        e.data = dataObject;
        RefrescarGrid();
       
    }
    function RefrescarGrid() {
        var grid = $("#gridInsurancePolicy").getKendoGrid();
        grid.dataSource.read();
        
    }

    function closeInsurancePolicy() {
        RefrescarGrid();
        $("#myModalInsurancePolicy").modal('hide');



