<script>

    function SaveEmployee() {


          var notification = $("#notification").data("kendoNotification");

          $("#btnGuardarEmployees").hide();
          $("#btnGuardarEmployees").prop("disabled", true);

          var dataObject = {
              'IdEmpleado': $("#IdEmpleado").val() === "" ? "0" : $("#IdEmpleado").val(),
              'NombreEmpleado': $("#NombreEmpleado").val(),
              'Correo': $("#Correo").val(),
              'FechaNacimiento': $("#FechaNacimiento").getKendoDateTimePicker().value().toJSON(),
              'FechaIngreso': $("#FechaIngreso").getKendoDateTimePicker().value().toJSON(),
              'Salario': $("#Salario").val(),
              'Identidad': $("#Identidad").val(),
              'FechaEgreso': $("#FechaEgreso").getKendoDateTimePicker().value().toJSON(),
              'Direccion': $("#Direccion").val(),
              'Genero': $("#Genero").val(),
              'TipoSangre': $("#TipoSangre").val(),
              'IdEstado': $("#IdEstado").val(),
              'IdState': $("#IdState").val(),
              'NombreContacto': $("#NombreContacto").val(),
              'TelefonoContacto': $("#TelefonoContacto").val(),
              'IdCountry': $("#IdCountry").val(),
              'IdCity': $("#IdCity").val(),
              'IdCurrency': $("#IdCurrency").val(),
              'IdActivoinactivo': $("#IdEstado").val(),
              'IdBank': $("#IdBank").val(),
              'CuentaBanco': $("#CuentaBanco").val(),
              'FechaFinContrato': $("#FechaFinContrato").getKendoDateTimePicker().value().toJSON(),
              'Telefono': $("#Telefono").val(),
              'Extension': $("#Extension").val(),
              'IdPuesto': $("#IdPuesto").val(),
              'IdSucursal': $("#IdSucursal").val(),
              'IdDepartamento': $("#IdDepartamento").val(),
              'IdTipoContrato': $("#IdTipoContrato").val(),
              'Notas': $("#Notas").val(),
              'IdBranch': $("#IdSucursal").val(),
              //temporal
              'ApplicationUserId': 'FC405B7D-9FE3-43C9-97B5-D87A174CAB8A'

          };

      //    console.log(dataObject);
          var validator = $("#frmEmployees").data("kendoValidator");
          if (validator.validate()) {

              $.ajax({
                  url: '@Url.Action("SaveEmployees", "Employees")',
                  method: 'POST',
                  datatype: "json",
                  contentType: 'application/json',
                  async: false,
                  data: JSON.stringify(dataObject),
                  success: function (data) {
                      $("#IdEmpleado").val(data.IdEmpleado);

                      $.toast({
                          heading: 'Satisfactorio',
                          text: '<br/><br/> Datos guardados correctamente.',
                          position: 'top-right',
                          loaderBg: '#ff6849',
                          icon: 'success',
                          showHideTransition: 'slide',
                          hideAfter: 3000,
                          stack: 6
                      });

                      $("#btnGuardarEmployees").show();
                      $("#btnGuardarEmployees").prop("disabled", false);

                  },
                  error: function (XMLHttpRequest, textStatus, errorThrown) {
                      console.log(textStatus + ": " + XMLHttpRequest.responseText);
                      $("#btnGuardarEmployees").show();
                      $("#btnGuardarEmployees").prop("disabled", false);
                      //  $("#btngenerarfactura").show();
                      notification.show({
                          title: "Validación",
                          message: textStatus + ": " + XMLHttpRequest.responseText
                      }, "error");

                  }
              });
          }
          else {
              $("#btnGuardarEmployees").show();
              $("#btnGuardarEmployees").prop("disabled", false);
              notification.show({
                  title: "Validación",
                  message: "Debe agregar los campos obligatorios!"
              }, "error");

          }



      }
</script>


