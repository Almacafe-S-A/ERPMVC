        function ReporteCertificados() {
        
        window.location.href = '@Url.Action("SFCertificates", "InsuranceCertificate")';


    }


        function Generar() {
            $('#ModalGenerar').modal('show');
        }

    </script>


@(Html.Kendo().Grid<ERPMVC.Models.InsuranceCertificate>()
                                              .Name("gridInsuranceCertificate")
