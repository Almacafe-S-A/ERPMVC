            CustomerAreaId: dataItem.CustomerAreaId,
            editar : 0
        };

        $.ajax({
            url: '@Url.Action("pvwCustomerDocumentUpload", "CustomerDocument")',
            method: 'POST',
            datatype: "json",
            contentType: 'application/json',
            async: false,
