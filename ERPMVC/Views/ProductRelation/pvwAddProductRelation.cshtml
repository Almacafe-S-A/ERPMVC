@model ERPMVC.DTO.ProductRelationDTO

@{ Layout = null;
    var messages = new Dictionary<string, string>() { { "custom", "Ingrese un valor correcto." },
           // {"required","Valor requerido" }
        };
    var rules = new Dictionary<string, string>() { { "custom", "customFunction" } };
}

<script>

        function customFunction(input) {

            if (input.attr('name') === "BranchId" && input.val() === "0") {
                return false;
            }

        }


</script>



<div id="ModalProductRelation" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Relación Servicio</h4>
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmProductRelation" kendo-validator="true"
                                      data-ajax="true"
                                      data-ajax-method="post"
                                      data-ajax-begin="SaveProductRelation"
                                      class="validation-wizard wizard-circle">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="RelationProductId" class=" control-label" style="width:100%">Id</label>
                                                    <input type="text" asp-for="RelationProductId" name="RelationProductId" class="k-textbox" disabled="disabled" style="min-width:100%" />
                                                    <span asp-validation-for="RelationProductId" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                
                                                <div class="form-group">
                                                    <label asp-for="ProductId" class="control-label"></label>
                                                    <kendo-dropdownlist name="ProductId"
                                                                        data-val-required="Servicio es requerido"
                                                                        for="@Model.ProductId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccione el Servicio"
                                                                        datatextfield="ProductName"
                                                                        datavaluefield="ProductId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true" page-size="9999">
                                                            <transport>
                                                                <read url="@Url.Action("Get", "Product")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span asp-validation-for="ProductId" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="SubProductId" class="control-label"></label>
                                                    <kendo-dropdownlist name="SubProductId"
                                                                        data-val-required="Subservicio es requerido"
                                                                        for="@Model.SubProductId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccione Sub Servicio"
                                                                        datatextfield="ProductName"
                                                                        datavaluefield="SubproductId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true" page-size="9999">
                                                            <transport>
                                                                <read url="@Url.Action("Get", "SubProduct")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span asp-validation-for="SubProductId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="IdEstado" class="control-label"></label>
                                                    <kendo-dropdownlist name="IdEstado"
                                                                        data-val-required="Estado es requerido"
                                                                        for="IdEstado"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Estado"
                                                                        datatextfield="NombreEstado"
                                                                        datavaluefield="IdEstado"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetGrupoEstadoUno", "Estados")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span asp-validation-for="IdEstado" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label >Cuenta Contable Ingresos</label>
                                                    <kendo-dropdownlist name="CuentaContableIngresosId" filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        for="CuentaContableIngresosId"
                                                                        option-label="Seleccione la cuenta " 
                                                                        datatextfield="AccountName"
                                                                        datavaluefield="AccountId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" page-size="9999999">
                                                            <transport>
                                                                <read url="@Url.Action("GetAccountingDiaryActivos", "Accounting")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span id="Span" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Cuenta Contable por Cobrar</label>
                                                    <kendo-dropdownlist name="CuentaContableIdPorCobrar" filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        for="CuentaContableIdPorCobrar"
                                                                        option-label="Seleccione la cuenta "
                                                                        datatextfield="AccountName"
                                                                        datavaluefield="AccountId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" page-size="9999999">
                                                            <transport>
                                                                <read url="@Url.Action("GetAccountingDiaryActivos", "Accounting")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span id="Span" class="text-danger"></span>
                                                </div>
                                            </div>

                                            


                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <button id="btnProductRelation" class="form-control btn-miboton" type="submit"> Guardar </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
        function SaveProductRelation(e) {

            var notification = $("#notification").data("kendoNotification");
           // e.preventDefault();
            $("#btnProductRelation").hide();
            $("#btnProductRelation").prop("disabled", true);


            debugger;
            var dataObject = {
                'RelationProductId': $("#RelationProductId").val() === "" ? "0" : $("#RelationProductId").val(),
                'ProductId': $("#ProductId").val(),
                'SubProductId': $("#SubProductId").val(),
                'IdEstado': $("#IdEstado").val(),
                'Estado': $("#IdEstado").data("kendoDropDownList").text(),
                'CuentaContableIngresosId': $("#CuentaContableIngresosId").val(),
                'CuentaContableIngresosNombre': $("#CuentaContableIngresosId").data("kendoDropDownList").text(),
                'CuentaContableIdPorCobrar': $("#CuentaContableIdPorCobrar").val(),
                'CuentaContablePorCobrarNombre': $("#CuentaContableIdPorCobrar").data("kendoDropDownList").text(),


            };


            var validator = $("#frmProductRelation").data("kendoValidator");
                 var status = $(".status");
            console.log(validator)
            if (validator.validate()) {

                    $.ajax({
                        url: '@Url.Action("SaveProductRelation", "ProductRelation")',
                        method: 'POST',
                        datatype: "json",
                        contentType: 'application/json',
                        async: false,
                        data: JSON.stringify(dataObject),
                        success: function (data) {

                            //notification.show({
                            //    message: "Guardado correctamente!"
                            //}, "upload-success");
                            $.toast({
                                heading: 'Satisfactorio',
                                text: 'Datos guardados correctamente.',
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'success',
                                hideAfter: 3000,
                                stack: 6
                            });

                            RefrescarGrid();

                            $('#ModalProductRelation').modal('hide');


                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            console.log('VERIFICAR')

                      
                            $.toast({
                                heading: 'Error',
                                text: XMLHttpRequest.responseText,
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'error',
                                hideAfter: 3000,
                                stack: 6
                            });

                        }
                    });

                }
                else {
                $.toast({
                    heading: 'Error',
                    text: 'Datos No validos en el formulario.',
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: 'error',
                    hideAfter: 3000,
                    stack: 6
                });
                }

            $("#btnProductRelation").show();
            $("#btnProductRelation").prop("disabled", false);
    }
</script>
