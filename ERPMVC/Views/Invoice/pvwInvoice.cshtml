                $("#btnSaveInvoice").show();
                $("#btnSaveInvoice").prop("disabled", false);

            }
        }
        else {
            $("#btnSaveInvoice").show();
            $("#btnSaveInvoice").prop("disabled", false);
        }
       
    }





