    function SaveCotizacion(e) {

        var notification = $("#notification").data("kendoNotification");
        // e.preventDefault();
        $("#btnSaveInvoice").hide();
        $("#btnSaveInvoice").prop("disabled", true);

        var validadetalle = true;
        var displayedData = $("#gridInvoiceDetail").data().kendoGrid.dataSource.view();
        for (var i = 0; i < displayedData.length; i++) {
            displayedData[i].InvoiceLineId = 0;
            if (displayedData[i].TaxCode === '' || displayedData[i].TaxCode === null
                || displayedData[i].Total === 0) {
                notification.show({
                    title: "Validación",
                    message: "No Ingreso el codigo de impuesto"
                }, "error");

                validadetalle = false;
            }
        }

        if (validadetalle) {
            var dataObject = {
                'InvoiceId': $("#InvoiceId").val() === "" ? "0" : $("#InvoiceId").val(),
                'InvoiceName': $("#InvoiceName").val(),
                'BranchId': $("#BranchId").val(),
                'BranchName': $("#BranchId").data("kendoDropDownList").text(),
                'IdPuntoEmision': $("#IdPuntoEmision").val(),
                'Caja': $("#IdPuntoEmision").data("kendoDropDownList").text(),                
                'CustomerId': $("#CustomerId").val(),
                'CustomerName': $("#CustomerId").data("kendoDropDownList").text(),
                'ProductId': $("#ProductId").val(),
                'ProductName': $("#ProductId").data("kendoDropDownList").text(),
                'OrderDate': $("#OrderDate").getKendoDateTimePicker().value().toJSON(),
                'InvoiceDate': $("#OrderDate").getKendoDateTimePicker().value().toJSON(),
               // 'DeliveryDate': $("#DeliveryDate").getKendoDateTimePicker().value().toJSON(),
                'ExpirationDate': $("#ExpirationDate").getKendoDateTimePicker().value().toJSON(),
                'CurrencyId': Number($("#CurrencyId").val()),
                'CurrencyName': $("#CurrencyId").data("kendoDropDownList").text(),
                'CustomerRefNumber': $("#CustomerRefNumber").val(),
                'SalesTypeId': $("#SalesTypeId").val(),
                'NoOCExenta': $("#NoOCExenta").val(),
                'NoSAG': $("#NoSAG").val(),
                'NoConstanciadeRegistro': $("#NoConstanciadeRegistro").val(),               
                'Remarks': $("#Remarks").val(),
                'Amount': $("#Amount").val(),
                'SubTotal': $("#SubTotal").val(),
                'Discount': $("#Discount").val(),
                'Tax': $("#Tax").val(),
                'Freight': $("#Freight").val(),
                'Total': $("#Total").val(),
                'Correo': $("#Correo").val(),
                'Direccion': $("#Direccion").val(),
                'RTN': $("#RTN").val(),
                'Tefono': $("#Tefono").val(),
                'TotalExento': $("#TotalExento").val(),
                'TotalExonerado': $("#TotalExonerado").val(),
                'TotalGravado': $("#TotalGravado").val(),
                'SalesOrderId': ($("#cbxBuscarCotizaciones").val() === '' ? 0 : $("#cbxBuscarCotizaciones").val()),
                'CertificadoDepositoId': $("#cbxBuscarFacturaProforma").val() === '' ? 0 : $("#cbxBuscarFacturaProforma").val(),
                'CustomerAreaId': $("#cbxBuscarCustomerArea").val() === '' ? 0 : $("#cbxBuscarCustomerArea").val(),
                'ProformaInvoiceId': $("#cbxBuscarFacturaProforma").val() === '' ? 0 : $("#cbxBuscarFacturaProforma").val(),
                'InvoiceLine': displayedData,

            };


            if (Number($("#Total").val()) <= 0 || Number($("#SubTotal").val()) <= 0) {
                notification.show({
                    title: "Validación",
                    message: "No se estan calculando correctamente los totales!!"
                }, "error");

                return;
                  
            }

            var validator = $("#frmSalesOrder").data("kendoValidator");
            var validator2 = $("#TotalesDocumento").data("kendoValidator");
            var status = $(".status");

            if (displayedData.length > 0) {
                if (validator.validate() && validator2.validate()) {

                    $.ajax({
                        url: '@Url.Action("SaveInvoice", "Invoice")',
                        method: 'POST',
                        datatype: "json",
                        //  contentType: "application/x-www-form-urlencoded; charset=UTF-8",
